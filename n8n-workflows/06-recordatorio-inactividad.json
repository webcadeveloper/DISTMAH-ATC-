      "main": [
        [
          { "node": "Recordatorio Urgente", "type": "main", "index": 0 }
        ]
      ]
    }
  },
  "settings": { "executionOrder": "v1" },
  "tags": [{ "name": "recordatorios" }, { "name": "inactividad" }, { "name": "cron" }]
}
