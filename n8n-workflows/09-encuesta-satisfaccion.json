  "connections": {
    "Webhook Encuesta": {
      "main": [
        [
          { "node": "Responder OK", "type": "main", "index": 0 },
          { "node": "Enviar Encuesta", "type": "main", "index": 0 }
        ]
      ]
    }
  },
  "settings": { "executionOrder": "v1" },
  "tags": [{ "name": "encuestas" }, { "name": "feedback" }]
