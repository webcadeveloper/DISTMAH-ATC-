      "parameters": {
        "jsCode": "const user = $('Webhook Registro').item.json.user;\nconst location = $('Webhook Registro').item.json.location;\nconst instructors = $input.all();\n\nconst notifications = instructors.map(instructor => ({\n  json: {\n    id: crypto.randomUUID(),\n    userId: instructor.json.id,\n    type: 'SYSTEM_ANNOUNCEMENT',\n    title: 'Nuevo estudiante registrado',\n    message: `${user.name} se ha registrado desde ${location.city || 'ubicacion desconocida'}, ${location.country || 'pais desconocido'}`,\n    link: '/admin/usuarios',\n    read: false,\n    createdAt: new Date().toISOString(),\n    updatedAt: new Date().toISOString()\n  }\n}));\n\nreturn notifications;"
      },
