        "query": "=INSERT INTO notifications (id, \"userId\", type, title, message, link, read, \"createdAt\", \"updatedAt\") VALUES ('{{ $json.id }}', '{{ $json.userId }}', '{{ $json.type }}', '{{ $json.title }}', '{{ $json.message }}', '{{ $json.link }}', {{ $json.read }}, '{{ $json.createdAt }}', '{{ $json.updatedAt }}')",
